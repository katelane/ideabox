    <h1>IdeaBox: Haunted Brunch</h1>
    <form action='/' method='POST' enctype='multipart/form-data'>
      <p>
        Your Recipe Idea:
      </p>
      Name of recipe:<br />
      <input type='text' name='idea[title]'/><br/><br />
      Recipe description:
      <br /><textarea name='idea[description]'></textarea><br/><br />
      Category:<br />
          <select name='idea[category]'>
          <option value="beverage">Beverage</option>
          <option value="appetizer">Appetizer</option>
          <option value="side dish">Side Dish</option>
          <option value="main dish">Main Dish</option>
          <option value="dessert">Dessert</option>
          </select><br/><br />
      Tags: <em>(ex. vegetable, chicken, alcohol)</em><br />
      <input type='text' name='idea[tags]'><br/><br />
      Image: <em>(add a photo)</em><br />
      <input type='file' name='idea[image]'/><br/><br />
      <input type='submit' value="submit"/>
    </form>
    <br />

    <h3>Existing Recipe Ideas</h3>
      <ul>
      <% ideas.each do |idea| %>
        <li>
          <span class="title"><%= idea.title %></span><br />
          <%= idea.description %><br /><br />
          <img src='/uploads/<%=idea.images%>' height=239px width=239px/><br /><br />
          <span class ="category"><%= idea.category %></span><br />
          <span class ="tags">
            Tags: <% idea.tags.each do |tag| %>
            <a href="/<%= tag %>/tag"><%= tag %></a>
            <% end %></span><br />
          <a href="/<%= idea.id %>/edit"><span class="note">edit this idea</span></a><br />
          <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
            <input type='submit' value="like +"/>
          </form>
          <form action="/<%= idea.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="delete"/>
          </form>
        </li>
      <% end %>
      </ul>
